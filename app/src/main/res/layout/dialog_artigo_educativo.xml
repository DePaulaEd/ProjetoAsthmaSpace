<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/blue_navy">

    <TextView
        android:id="@+id/dialog_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Título do Artigo"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dialog_conteudo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Conteúdo do artigo aqui..."
        android:textColor="@color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/dialog_btn_fechar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="24dp"
        android:text="Fechar"
        android:textColor="@color/blue_navy"
        android:backgroundTint="@color/turquoise_light" />

</LinearLayout>